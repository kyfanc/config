# This is Git's per-user configuration file.
[include]
	path = "~/.user.gitconfig"

[core]
	editor = hx
    pager = delta

[interactive]
    diffFilter = delta --color-only

[merge]
    conflictstyle = diff3
	ff = no

[diff]
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
	algorithm = histogram

[delta]
    navigate = true    # use n and N to move between diff sections
    true-color = always
    features = "custom"

# ref: https://raw.githubusercontent.com/dandavison/delta/master/themes.gitconfig
[delta "custom"]
    # General appearance
    dark = true
    syntax-theme = gruvbox-dark
    # commit
    commit-style = raw
    # File
    file-style = "#FFFFFF" bold
    file-added-label = [+]
    file-copied-label = [==]
    file-modified-label = [~]
    file-removed-label = [-]
    file-renamed-label = [->]
    file-decoration-style = "#434C5E" ul
    file-decoration-style = "#84786A" ul
    # No hunk headers
    hunk-header-style = omit
    # Line numbers
    line-numbers = true
    line-numbers-left-style = "#84786A"
    line-numbers-right-style = "#84786A"
    line-numbers-minus-style = "#A02A11"
    line-numbers-plus-style = "#479B36"
    line-numbers-zero-style = "#84786A"
    line-numbers-left-format = " {nm:>3} │"
    line-numbers-right-format = " {np:>3} │"
    # Diff contents
    inline-hint-style = syntax
    minus-style = syntax "#330011"
    minus-emph-style = syntax "#80002a"
    minus-non-emph-style = syntax auto
    minus-empty-line-marker-style = syntax "#600000"
    plus-style = syntax "#001a00"
    plus-emph-style = syntax "#227722"
    plus-empty-line-marker-style = syntax "#005500"
    plus-non-emph-style = syntax auto
    whitespace-error-style = "#FB4934" reverse
    # Commit hash
    # commit-decoration-style = normal box
    # commit-style = "#ffffff" bold
    # Blame
    blame-code-style = syntax
    blame-format = "{author:>18} ({commit:>8}) {timestamp:<13} "
    blame-palette = "#000000" "#1d2021" "#282828" "#3c3836"
    # Merge conflicts
    merge-conflict-begin-symbol = ⌃
    merge-conflict-end-symbol = ⌄
    merge-conflict-ours-diff-header-style = "#FABD2F" bold
    merge-conflict-theirs-diff-header-style = "#FABD2F" bold overline
    merge-conflict-ours-diff-header-decoration-style = ''
    merge-conflict-theirs-diff-header-decoration-style = ''
    # grep
    grep-file-style = syntax "#227722"
    grep-line-number-style = "#479B36"

[push]
	default = simple
	autoSetupRemote = true
	followTags = true
[fetch]
	prune = true
	pruneTags = true
	all = true
[tag]
	sort = version:refname
[branch]
	sort = -committerdate
[rerere]
	enabled = true
	autoupdate = true
[pull]
	rebase = true

[alias]
	ui = !gitui
